<style>
  table {
      width: 100%;
      border-collapse: collapse;
      display: none; /* Hide tables by default */
  }
  th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
  }

  .toggle-container {
      margin-bottom: 20px;
      display: flex;
      align-items: center;
  }
  .toggle-button {
      position: relative;
      width: 60px;
      height: 34px;
  }
  .toggle-button input[type="checkbox"] {
      display: none;
  }
  .toggle-button .slider {
      position: absolute;
      cursor: pointer;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: #ccc;
      border-radius: 34px;
      transition: 0.4s;
  }
  .toggle-button .slider:before {
      position: absolute;
      content: "";
      height: 26px;
      width: 26px;
      left: 4px;
      bottom: 4px;
      background-color: white;
      border-radius: 50%;
      transition: 0.4s;
  }
  .toggle-button input:checked + .slider {
      background-color: #4CAF50;
  }
  .toggle-button input:checked + .slider:before {
      transform: translateX(26px);
  }
  .toggle-button .slider.round {
      border-radius: 34px;
  }
  .toggle-button .slider.round:before {
      border-radius: 50%;
  }
  .size-chart-wrapper{
    padding:0 5rem;
  }
</style>

<div class="size-chart-wrapper">
  <div class="size-chart-wrapper--sizes">
    <button class="sizes">XXS</button>
    <button class="sizes">XS</button>
    <button class="sizes">S</button>
    <button class="sizes">M</button>
    <button class="sizes">L</button>
  </div>
  <div class="measurements">
    <p>Measurements</p>
    <div class="toggle-container">
      <span style="margin-left: 10px;">In</span>
      <label class="toggle-button">
        <input type="checkbox" id="unit-toggle" name="unit-toggle">
        <span class="slider round"></span>
      </label>
      <span style="margin-left: 10px;">cm</span>
    </div>

    <table id="inch-table">
      <tr>
        <th>Area</th>
        <th>Measurement</th>
      </tr>
      <tr>
        <td>Length</td>
        <td data-cm="15" data-inch="5.9">5.9 inch</td>
      </tr>
      <tr>
        <td>Chest</td>
        <td data-cm="20" data-inch="7.9">7.9 inch</td>
      </tr>
      <tr>
        <td>Shoulder</td>
        <td data-cm="12" data-inch="4.7">4.7 inch</td>
      </tr>
      <tr>
        <td>Front length</td>
        <td data-cm="40" data-inch="15.7">15.7 inch</td>
      </tr>
      <tr>
        <td>Sleeve length</td>
        <td data-cm="40" data-inch="15.7">15.7 inch</td>
      </tr>
    </table>

    <table id="cm-table">
      <tr>
        <th>Area</th>
        <th>Measurement</th>
      </tr>
      <tr>
        <td>Length</td>
        <td data-cm="15" data-inch="5.9">15 cm</td>
      </tr>
      <tr>
        <td>Chest</td>
        <td data-cm="20" data-inch="7.9">20 cm</td>
      </tr>
      <tr>
        <td>Shoulder</td>
        <td data-cm="12" data-inch="4.7">12 cm</td>
      </tr>
      <tr>
        <td>Front length</td>
        <td data-cm="40" data-inch="15.7">40 cm</td>
      </tr>
      <tr>
        <td>Sleeve length</td>
        <td data-cm="40" data-inch="15.7">40 cm</td>
      </tr>
    </table>
  </div>
</div>
<script>
  const unitToggle = document.getElementById('unit-toggle');
  const inchTable = document.getElementById('inch-table');
  const cmTable = document.getElementById('cm-table');

  function updateMeasurements() {
      if (unitToggle.checked) {
          inchTable.style.display = 'none';
          cmTable.style.display = 'table';
      } else {
          inchTable.style.display = 'table';
          cmTable.style.display = 'none';
      }
  }

  unitToggle.addEventListener('change', updateMeasurements);

  // Initial update
  updateMeasurements();
</script>
